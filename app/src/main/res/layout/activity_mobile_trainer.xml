<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/activity_mobile_trainer_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress" />

    <Button
        android:layout_margin="2dp"
        android:id="@+id/activity_mobile_trainer_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login" />

    <RelativeLayout
        android:id="@+id/activity_mobile_trainer_check_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <CheckBox
            android:id="@+id/activity_mobile_trainer_product1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
           android:layout_margin="4dp"
            android:text="Product 1" />

        <CheckBox
            android:id="@+id/activity_mobile_trainer_product2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:text="Product 2" />

        <CheckBox
            android:id="@+id/activity_mobile_trainer_product3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:text="Product 3" />
    </RelativeLayout>

    <Button
        android:layout_margin="8dp"
        android:id="@+id/activity_mobile_trainer_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to cart" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:id="@+id/activity_mobile_trainer_radio_group"
        >

        <RadioButton
            android:id="@+id/activity_mobile_trainer_cartao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Cartao" />

        <RadioButton
            android:id="@+id/activity_mobile_trainer_boleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Boleto" />
    </RadioGroup>

    <Button
        android:id="@+id/activity_mobile_trainer_purchase_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Comprar" />

</LinearLayout>